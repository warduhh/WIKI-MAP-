<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css">
  <link rel="stylesheet" href="/vendor/border-box.css">
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/layout.css">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>

  <!-- api -->

</head>

<body>
  <nav>
    <h1>Wiki Map üåç</h1>
    <span>
      <span>
        <form action="" method="get">
          <button>
            <a href="/profile">Profile</a>
          </button>
          <button>Login</button>
        </form>
      </span>
    </span>
  </nav>
  <div class="container">
    <ul class="mapList">
      <!-- Loop through the maps and display each one -->
      <% maps.forEach(function(map) { %>
        <li>
          <a href="/maps/<%= map.id %>">
            <%= map.map_category %> - <%= map.description %>
          </a>

          <!-- favorite map by userID -->
          <!-- id is hardcoded as 1, will need to replace as logged in user -->
          <form method="post" action="/profile/1">
            <button type="submit">‚ô•</button>
            <input type="hidden" name="mapID" value="<%= map.id %>">
          </form>
        </li>
      <% }); %>
    </ul>
    <div id="map"></div>
  </div>


  <script src="/scripts/script.js"></script>

  <script src="https://maps.googleapis.com/maps/api/js?key=<%= process.env.API_KEY %>&callback=initMap" async defer></script>

</body>

</html>
